# Environment Configuration for LinkedInPulse Backend
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=linkedinpulse

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Admin JWT (separate secret for admin authentication)
ADMIN_JWT_SECRET=your-super-secret-admin-jwt-key-change-this-in-production

# Google AI API
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Razorpay Payment Gateway Configuration
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# RapidAPI (LinkedIn Scraper)
RAPIDAPI_KEY=your-rapidapi-key-here

# Email Service Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@linkedinpulse.com
EMAIL_FROM_NAME=LinkedInPulse

# Google Analytics Configuration
# Get your GA4 Property ID from: https://analytics.google.com/
GA_PROPERTY_ID=your-ga4-property-id-here
# Path to your Google Service Account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json